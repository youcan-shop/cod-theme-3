{{ 'queries-handler.css' | asset_url | stylesheet_tag }}
{{ 'collection-listing.css' | asset_url | stylesheet_tag }}

{% style %}
  .yc-section-title {
    display: flex;
    justify-content: {{ section.settings.section_title_position }};
  }

  .categories-spacing {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  .category-name {
    color: {{ section.settings.category_name_color.hex }};
  }
  
  .slug-name {
    color: {{ section.settings.category_slug_color.hex }}; 
  }
{% endstyle %

{%- assign per_page = section.settings.items_per_page -%}
<div class='yc-collection-listing'>
    {%- render 'breadcrumbs' -%}
  {%- paginate collections by per_page cod %}
    <div class='collection-list'>
      {% for collection in items %}
        {%- render 'collection-preview', category: collection %}
      {% endfor %}
    </div>
  {%- endpaginate %}
</div>

{% schema %}
{
  "label": "Collections",
  "templates": ["list-collections"],
  "limit": 1,
  "settings": [
    {
      "type": "number",
      "id": "items_per_page",
      "label": "Collections per page",
      "default": 10
    },
    {
      "type": "color",
      "id": "category_name_color",
      "label": "Category name color"
    },
    {
      "type": "color",
      "id": "category_description",
      "label": "Category description color"
    }
  ]
}
{% endschema %}
